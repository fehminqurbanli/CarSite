@using Microsoft.AspNetCore.Http;
@{
    string fullName = Context.Session.GetString("fullname");
} 


<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title></title>
        <meta name="viewport" content="width=device-width, initial-scale=1,shrink-to-fit=no">
        <link href="~/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        
    </head>
    <body>
        <div>
            
            <div style="text-align:center;">
                <h1 style="color:teal;text-decoration-style:solid;text-align:center;"><b>Find your Economic Car</b></h1>
                <h2>Welcome @fullName</h2>
                <img src="/image/chevrolet.jpg" class="img-fluid container" style="height:500px;width:100%;" />
            </div>
            <br>
            <div class="d-grid gap-2 col-6 mx-auto container">
                <a class="btn btn-success btn-lg" type="button" asp-controller="ExploreCar" asp-action="Index">Explore Cars</a>
            </div>
           

            <div class="container">
                <section class="icons-container row" style="text-align:center;">

                    <div class="icons col">
                        <div class="content">
                            <h3><i class="fas fa-code-branch"></i> 150+</h3>
                            <p>branches</p>
                        </div>
                    </div>

                    
                    <div class="icons col">
                        <div class="content">
                            <h3><i class="fas fa-users"></i> 320+</h3>
                            <p>happy clients</p>
                        </div>
                    </div>

                    <div class="icons col">
                        <div class="content">
                            <h3><i class="fas fa-car"></i> 1500+</h3>
                            <p>news cars</p>
                        </div>
                    </div>

                </section>
            </div>

            @*-----------------*@


            <div id="carouselExampleCaptions" class="carousel slide container" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/AdobeStock_245393308.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Electrical car selling</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/b0fae0407f4783af9239596be77ae01b.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Electrical car washing</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/em-0211-0304-electriccar.jpg" class="d-block w-100" alt="...">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Electrical car repairing</h5>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <br /><br /><br />

            <div class="container">
                <h2>Our Services</h2>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    <div class="col">
                        <div class="card" >
                            <img src="/images/carwashing.jpg" class="card-img-top" alt="..." style="height: 200px;">
                            <div class="card-body" style="background-color: #f2d900; text-align: center;">
                                <h5 class="card-title">Car washing</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <img src="/images/electriccarrepair.jpg" class="card-img-top" alt="..." style="height: 200px;">
                            <div class="card-body" style="background-color: #f2d900; text-align: center;">
                                <h5 class="card-title">Car Repairing</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <img src="/images//carselling.jpg" class="card-img-top" alt="..." style="height: 200px;">
                            <div class="card-body" style="background-color: #f2d900; text-align: center;">
                                <h5 class="card-title">Car Selling</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <img src="/images/rent.jpg" class="card-img-top" alt="..." style="height: 200px;">
                            <div class="card-body" style="background-color: #f2d900; text-align:center;">
                                <h5 class="card-title">Car rent</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <img src="/images/partsselling.jpg" class="card-img-top" alt="..." style="height: 200px;">
                            <div class="card-body" style="background-color: #f2d900; text-align: center;">
                                <h5 class="card-title">Selling of Car Parts</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card">
                            <img src="/images/restyling.jpg" class="card-img-top" alt="..." style="height: 200px;">
                            <div class="card-body" style="background-color: #f2d900; text-align: center;">
                                <h5 class="card-title">Car Restyling</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br /><br />

            @*-----------*@
            <div class="container"><h2>Our Advantages</h2></div>
            <div style="background-color: #EEECEC; height: 250px;">
                <div class="row">
                    <div class="col">
                        <h3 style="text-align:center">100%</h3>
                        <h3>Free</h3>
                        <h4>WE'LL NEVER ASK FOR PAYMENT INFORMATION, EVEN WHEN IT SELLS</h4>
                    </div>
                    <div class="col">
                        <h3>100%</h3>
                        <h3>Free</h3>
                        <h4>EV SPECIFIC SEARCH TOOLS & THE MOST DETAILED LISTINGS</h4>
                    </div>
                    <div class="col">
                        <h3>100%</h3>
                        <h3>Free</h3>
                        <h4>PRIVATE DIRECT MESSAGING</h4>
                    </div>
                    <div class="col">
                        <h3>100%</h3>
                        <h3>Free</h3>
                        <h4>TOOLS TO HELP COMPLETE THE TRANSACTION</h4>
                    </div>
                </div>
            </div>

        </div>

    </body>
</html>